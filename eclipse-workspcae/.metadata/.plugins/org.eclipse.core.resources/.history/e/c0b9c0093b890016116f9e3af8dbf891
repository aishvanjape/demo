class A implements Runnable{
      public void run(){
            System.out.println("run-A");
      }
}

1. public class Test{
2.       public static void main(String argv[]){
3.             A a = new A();
4.             Thread t = new Thread(a);
5.             System.out.println(t.isAlive());
6.             t.start();
7.             System.out.println(t.isAlive());
8.       }
9. }