package com.bank;

public class Account {

	Customer c;
	int id;
	double balance;
	
	public Account(Customer c, int id) {
		this.c = c;
		this.id = id;
		this.balance = 5000;
	}
	
	public boolean deposit(double amt) throws InterruptedException
	{
		double bal = this.balance;
		Thread.sleep((long)(500*Math.random()));
		bal = bal + amt;
		Thread.sleep(500);
		this.balance = bal;
		Thread.sleep(500);
		return true;
	}
	public boolean withdraw(double amt) throws InterruptedException
	{
		double bal = this.balance;
		Thread.sleep(15000);
		bal = bal - amt;
		Thread.sleep(500);
		this.balance = bal;
		Thread.sleep(500);
		return true;
	}
	
	public double get_balance()
	{
		return this.balance;
	}
}
