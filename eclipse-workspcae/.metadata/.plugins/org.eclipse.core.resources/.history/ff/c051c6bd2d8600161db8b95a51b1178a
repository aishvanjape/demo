package com.flp.ems.service;

import java.text.ParseException;
import java.util.Date;
import java.util.HashMap;

import com.flp.ems.domain.Employee;
import com.flp.ems.util.Validate;

public class EmployeeServiceImpl implements IEmployeeService{

	
	private HashMap<String, String> hashobject;
	private IEmployeeService service_interface;
	
	public EmployeeServiceImpl(HashMap<String, String> h) {
		hashobject = h;
	}
	
	@Override
	public void AddEmployee() {
		
		String name,kin_id,email_id,address;
		long phone_no,department_id,project_id,role_id;
		Date date_of_birth = null,date_of_joining = null;
		
		name = this.hashobject.get("Name");
		kin_id = this.hashobject.get("Kin_Id");
		email_id = this.hashobject.get("Email_Id");
		address = this.hashobject.get("Address");
		phone_no = Long.parseLong(this.hashobject.get("Phone_No"));
		department_id = Long.parseLong(this.hashobject.get("Department_Id"));
		project_id = Long.parseLong(this.hashobject.get("Project_Id"));
		role_id = Long.parseLong(this.hashobject.get("Role_Id"));
	
		
		
		try {
			date_of_birth = Validate.validate_Date(this.hashobject.get("Date_Of_Birth"));
			date_of_joining = Validate.validate_Date(this.hashobject.get("Date_Of_Joining"));
		} catch (ParseException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		Employee employee = new Employee(name, kin_id, email_id, phone_no, date_of_birth, date_of_joining, address, department_id, project_id, role_id);
		IEmployeeService employeedao 
		
		
		
	}

