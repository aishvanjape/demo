class Z extends Thread{
	private int i;
	public void run()
	{
		i=1;
		try {
			Thread.sleep(10000);
		} catch (InterruptedException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	public static void main(String[] args) throws InterruptedException {
		Z b = new Z();
		b.start();
		b.join();
		System.out.println(b.i);
	}
}
